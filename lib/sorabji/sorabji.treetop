grammar Sorabji
  rule statement
    ( object_identifier / integer / identifier )* <Sorabji::StatementNode>
  end

  rule object_identifier
    '{' ident:( identifier / integer ) '}' <Sorabji::ObjectIdentifierNode>
  end

  rule integer
    [0-9]+ <Sorabji::IntegerLiteralNode>
  end

  rule identifier
    [a-z_] <Sorabji::Identifier>
  end
end
